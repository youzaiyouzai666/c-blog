<%- include('../layout/header') %>

<div class="ui grid">
    <div class="four wide column">
        <a class="avatar"
           href="/article/lists?author=<%= user._id %>"
           data-title="<%= user.name %> | <%= ({m: '男', f: '女', x: '保密'})[user.gender] %>"
           data-content="<%= user.bio %>">
            <img class="avatar" src="/<%= user.avatar %>">
        </a>
    </div>

    <div class="eight wide column">
        <form class="ui form segment js_form_article">
            <div class="field required" style="display:none">
                <label>ID</label>
                <input type="text" name="id"
                        <% if(locals.article){ %>
                       value="<%= article.id %>">
                <% } %>
                >
            </div>
            <div class="field required">
                <label>标题</label>
                <input type="text" name="title"
                        <% if(locals.article){ %>
                       value="<%= article.title %>">
                <% } %>
                >
            </div>
            <div class="field required">
                <label>内容</label>
                <% if(locals.article){ %>
                <textarea name="content" rows="15"><%= article.content %></textarea>
                <% }else{ %>
                <textarea name="content" rows="15"> </textarea>
                <% } %>
            </div>
            <input type="button" class="ui button js_create" value="发布">
        </form>
    </div>
</div>
<script data-main="<% blog.staticHome %>/js/article/create"
        src="//cdn.bootcss.com/require.js/2.3.2/require.min.js"></script>

<%- include('../layout/footer') %>
